# Add your OpenAI API key here
OPENAI_API_KEY=your_openai_api_key_here

# Database settings (shared with docker-compose.yml)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=meeting_audio_studio
DB_USERNAME=postgres
DB_PASSWORD=password

# Broadcasting settings
BROADCAST_DRIVER=reverb
REVERB_APP_ID=meeting-audio-studio
REVERB_APP_KEY=local
REVERB_APP_SECRET=local
REVERB_HOST=localhost
REVERB_PORT=8081
REVERB_SCHEME=http

# Pusher settings (for frontend compatibility)
PUSHER_APP_ID="${REVERB_APP_ID}"
PUSHER_APP_KEY="${REVERB_APP_KEY}"
PUSHER_APP_SECRET="${REVERB_APP_SECRET}"
PUSHER_HOST="${REVERB_HOST}"
PUSHER_PORT="${REVERB_PORT}"
PUSHER_SCHEME="${REVERB_SCHEME}"
PUSHER_APP_CLUSTER=mt1

# For development, disable SSL verification
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"
